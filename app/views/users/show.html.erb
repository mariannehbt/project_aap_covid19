<div class="container py-md-3">
	<div class="row">
	<aside class="col-lg-4">
		<div class="box_style_2">
			<h4 class="heading mb-sm-5 mb-4">Bienvenue <%=@user.username%></h4>
			<hr class="styled">
			<h5>Pour vous évaluer à nouveau: </h5>
			<p><%= link_to "Accéder au questionnaire", new_survey_path,  class: "btn_1  my-sm-3 mb-3" %></p>
			<hr class="styled">
			<h5>Changer la fréquence des envois: </h5>
			<p><a href="#openModal-about" class="btn_1  my-sm-3 mb-3">Changer la fréquence</a></p>
			<hr class="styled">
			<p><%= link_to 'Se déconnecter', destroy_user_session_path, class: "btn_1  my-sm-3 mb-3" %></p>
			<hr class="styled">
		</div>
	</aside>
	<!--End aside -->
	<div class="col-lg-8">

		<h4>L'évolution de votre score :</h4>
		<br>

		<%= column_chart @user.surveys.group_by_day(:created_at, format: "%d/%m/%Y").maximum(:depression_score) %>
		<br>
		<br>
		<!--modals-->
		<div id="openModal-about" class="modalDialog">
			<div>
				<a href="#close" title="Close" class="close">X</a>
				<%= form_with url: "/set_frequency", local: true do |form| %>
					<div class="form-group">
					<div class="styled-select clearfix">
						<%= form.select :notification_frequency, %w(Weekly Fortnightly Monthly), {}, {class: "form-control"}%>
					</div>
					</div>
					
					<%= form.submit "Sauver", class: "btn_1 rounded my-sm-3 mb-3" %>
					
				<% end %>
			</div>
		</div>
	</div>
	</div>
</div>
